<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frontPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/p1">

    <Button
        android:id="@+id/btnSimpleQuestion"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="130dp"
        android:text="@string/simple_question"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnToughQuestion"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/tough_question"
        android:layout_alignBaseline="@+id/btnSimpleQuestion"
        android:layout_alignBottom="@+id/btnSimpleQuestion"
        android:layout_toRightOf="@+id/btnSimpleQuestion"
        android:layout_toEndOf="@+id/btnSimpleQuestion"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/btnOtherApps"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="98dp"
        android:text="@string/other_apps"
        android:layout_below="@+id/btnSimpleQuestion"
        android:layout_alignLeft="@+id/btnSimpleQuestion"
        android:layout_alignStart="@+id/btnSimpleQuestion" />

    <Button
        android:id="@+id/btnRate"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/rate_app"
        android:layout_alignBaseline="@+id/btnOtherApps"
        android:layout_alignBottom="@+id/btnOtherApps"
        android:layout_alignLeft="@+id/btnToughQuestion"
        android:layout_alignStart="@+id/btnToughQuestion" />

</RelativeLayout>
