<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frontPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/p1">

    <Button
        android:id="@+id/btnSimpleQuestion"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="7sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="@string/simple_question" />

    <Button
        android:id="@+id/btnToughQuestion"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="7sp"
        android:textAllCaps="false"
        android:text="@string/tough_question"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnOtherApps"
        android:layout_alignStart="@+id/btnOtherApps" />

    <Button
        android:id="@+id/btnOtherApps"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="7sp"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        android:text="@string/other_apps"
        android:layout_below="@+id/btnToughQuestion"
        android:layout_alignLeft="@+id/btnSimpleQuestion"
        android:layout_alignStart="@+id/btnSimpleQuestion" />

    <Button
        android:id="@+id/btnRate"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="7sp"
        android:textAllCaps="false"
        android:layout_marginTop="14dp"
        android:text="@string/rate_app"
        android:layout_below="@+id/btnOtherApps"
        android:layout_alignLeft="@+id/btnOtherApps"
        android:layout_alignStart="@+id/btnOtherApps" />

</RelativeLayout>
