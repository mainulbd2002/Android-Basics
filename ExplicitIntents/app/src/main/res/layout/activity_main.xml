<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mainul.explicitintents.ActivityA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Users!!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/btnSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Switch1"
        android:onClick="switchActivity" />

    <Button
        android:id="@+id/btnSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSwitch1"
        android:layout_alignStart="@+id/btnSwitch1"
        android:layout_below="@+id/btnSwitch1"
        android:layout_marginTop="34dp"
        android:text="Switch2"
        android:onClick="switchActivity" />

    <Button
        android:id="@+id/btnSwitch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Switch3"
        android:onClick="switchActivity"
        android:layout_below="@+id/btnSwitch2"
        android:layout_alignLeft="@+id/btnSwitch2"
        android:layout_alignStart="@+id/btnSwitch2" />

</RelativeLayout>
